{% extends 'back/index.html.twig' %}

{% block backContent %}
<div class="row justify-content-center">
  <div class="col-md-12 heading-section text-center ftco-animate">
    <h2>Achats</h2>
  </div>
</div
<div class="card-box">
    <table id="datatable" class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Livre</th>
                <th>Fournisseur</th>
                <th>Quantit√©</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>

        <tbody>
        {% for achat in achats %}
        <tr>
            <td>{{achat.id}}</td>
            <td>{{achat.livre.titre}}</td>
            <td>{{achat.fournisseur.nom}}</td>
            <td>{{achat.quantite}}</td>
            <td>{{achat.prixAchat}}</td>
            <td>{{achat.date | date('d/m/Y')}}</td>
            <td>
                <a href="{{ path('achat_edit', {'id': achat.id })}}"><i class="fa fa-edit"></i></a>
            </td>
            <td>
                <a href="{{ path('achat_remove', {'id': achat.id}) }}" class="deleteItem"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('achat_new') }}" class="btn py-3 px-4 btn-primary btn-add">+ Ajouter un achat</a>
</div>
{% endblock %}
