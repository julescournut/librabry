{% extends 'back/index.html.twig' %}

{% block backContent %}
<div class="row justify-content-center">
  <div class="col-md-12 heading-section text-center ftco-animate">
    <h2>Fournisseurs</h2>
  </div>
</div
<div class="card-box">
    <table id="datatable" class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>

        <tbody>
        {% for fournisseur in fournisseurs %}
        <tr>
            <td>{{fournisseur.id}}</td>
            <td>{{fournisseur.nom}}</td>
            <td>{{fournisseur.tel}}</td>
            <td>{{fournisseur.adresse.rue~' '~fournisseur.adresse.codePostal~' '~fournisseur.adresse.ville~', '~fournisseur.adresse.pays.nom }}</td>
            <td>
                <a href="{{ path('fournisseur_edit', {'id': fournisseur.id })}}"><i class="fa fa-edit"></i></a>
            </td>
            <td>
                <a href="{{ path('fournisseur_remove', {'id': fournisseur.id}) }}" class="deleteItem"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('fournisseur_new') }}" class="btn py-3 px-4 btn-primary btn-add">+ Ajouter un fournisseur</a>
</div>
{% endblock %}
