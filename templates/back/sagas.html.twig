{% extends 'back/index.html.twig' %}

{% block backContent %}
<div class="row justify-content-center">
  <div class="col-md-12 heading-section text-center ftco-animate">
    <h2>Saga</h2>
  </div>
</div
<div class="card-box">
    <table id="datatable" class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>

        <tbody>
        {% for saga in sagas %}
        <tr>
            <td>{{saga.id}}</td>
            <td>{{saga.titre}}</td>
            <td>
                <a href="{{ path('saga_edit', {'id': saga.id })}}"><i class="fa fa-edit"></i></a>
            </td>
            <td>
                <a href="{{ path('saga_remove', {'id': saga.id })}}" class="deleteItem"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('saga_new') }}" class="btn py-3 px-4 btn-primary btn-add">+ Ajouter une saga</a>
</div>
{% endblock %}
